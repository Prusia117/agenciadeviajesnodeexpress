.row.proximos-viajes
    each viaje in viajes
        .col-md-6.col-lg-4.mb-4
            .card
                img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`, alt=`${viaje.titulo}`)
                .card-body
                    h2= viaje.titulo
                    p
                        i.bi.bi-calendar-event
                        |   #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                    p
                        i.bi.bi-people
                        |   #{viaje.disponibles} Disponibles
                    p= viaje.descripcion.substring(0, 100) + '...'
                    a.btn.btn-success.btn-block(href=`viajes/${viaje.slug}`) Mas informaci&oacute;n