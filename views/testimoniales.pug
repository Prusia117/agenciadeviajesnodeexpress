extends ./layout/index

block content
    main.container.mt-5
        h1.text-center.mt-5= pagina


        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales
        .row

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimoniales

                if(errores)
                    each error in errores
                        div.alert.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action='/testimoniales' method='POST')
                        .form-group
                            label(for='nombre') Nombre
                            input#nombre.form-control(type='text', name='nombre', placeholder='Tu Nombre', value=nombre)
                        .form-group
                            label(for='correo') Correo Electron&iacute;co
                            input#correo.form-control(type='email', name='correo', placeholder='Tu Correo', value=correo)
                        .form-group
                            label(for='mensaje') Mensaje
                            textarea#mensaje.form-control(name='mensaje', placeholder='Tu Mensaje', value=mensaje)
                        input.btn.btn-success.btn-block(type='submit', value='Agregar Testimonial')